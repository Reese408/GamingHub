<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/profile.css">
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@latest"></script>
</head>
<body>
    <!-- Vanta Background Effect -->
    <div id="profile-page"></div>

    <%- include('partials/nav') %>

    <div class="container">
        <!-- Profile Header with Equipped Items -->
        <div class="profile-header">
            <% if (user.equippedItems && user.equippedItems.frame) { %>
                <div class="profile-frame">
                    <img src="<%= user.equippedItems.frame %>" alt="Profile Frame">
                </div>
            <% } %>
            
            <img class="profile-picture" src="<%= user.profilePicture || '/images/default-profile.png' %>" alt="Profile Picture">
            
            <% if (user.equippedItems && user.equippedItems.badge) { %>
                <div class="profile-badge">
                    <img src="<%= user.equippedItems.badge %>" alt="Profile Badge">
                </div>
            <% } %>
            
            <h1><%= user.username %></h1>
            <p>Welcome to your profile!</p>
            <p><strong>Points:</strong> <%= user.points %></p>
        </div>

        <!-- Profile Content -->
        <div class="profile-content">
            <!-- Left Side: User Info -->
            <div class="profile-info">
                <h2>About Me</h2>
                <p>Email: <%= user.email %></p>
                <p class="bio"><%= user.bio || 'No bio yet.' %></p>

                <!-- Update Bio Form -->
                <form action="/update-bio" method="POST">
                    <label for="bio">Update Bio:</label>
                    <textarea id="bio" name="bio" rows="4" placeholder="Tell us about yourself..."><%= user.bio || '' %></textarea>
                    <button type="submit">Update Bio</button>
                </form>

                <!-- Upload Profile Picture Form -->
                <form action="/upload-profile-picture" method="POST" enctype="multipart/form-data">
                    <label for="profilePicture">Update Profile Picture:</label>
                    <input type="file" id="profilePicture" name="profilePicture" accept="image/*" required>
                    <button type="submit">Upload Picture</button>
                </form>
            </div>

            <!-- Right Side: My Items -->
            <div class="profile-items">
                <h2>My Items</h2>
                <% if (user.items && user.items.length > 0) { %>
                    <div class="items-grid">
                        <% user.items.forEach(item => { %>
                            <div class="item">
                                <img src="<%= item.imageUrl %>" alt="<%= item.name %>">
                                <h3><%= item.name %></h3>
                                <p><%= item.description %></p>
                                <p class="price">Price: <%= item.price %> points</p>
                                <!-- Sell Item Form -->
                                <form action="/sell-item" method="POST">
                                    <input type="hidden" name="itemId" value="<%= item._id %>">
                                    <button type="submit" class="sell-button">Sell for <%= Math.floor(item.price * 0.8) %> points (80% refund)</button>
                                </form>
                                <% if (item.profileDisplay) { %>
                                    <form action="/equip-item" method="POST">
                                        <input type="hidden" name="itemId" value="<%= item._id %>">
                                        <input type="hidden" name="itemType" value="<%= item.profileDisplay %>">
                                        <button type="submit">Equip</button>
                                    </form>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p>You haven't purchased any items yet. Visit the <a href="/store">store</a> to get started!</p>
                <% } %>
            </div>
        </div>

        <!-- Profile Showcase Section -->
        <div class="profile-showcase">
            <h2>My Profile Customizations</h2>
            <% if (user.profileItems && user.profileItems.length > 0) { %>
                <div class="items-grid">
                    <% user.profileItems.forEach(item => { %>
                        <div class="profile-item">
                            <img src="<%= item.itemId.imageUrl %>" alt="<%= item.itemId.name %>">
                            <div class="item-info">
                                <h4><%= item.itemId.name %></h4>
                                <p><%= item.itemId.description %></p>
                                <form action="/equip-item" method="POST">
                                    <input type="hidden" name="itemId" value="<%= item.itemId._id %>">
                                    <input type="hidden" name="itemType" value="<%= item.itemId.profileDisplay %>">
                                    <button type="submit">
                                        <%= item.equipped ? 'Unequip' : 'Equip' %>
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>No profile customizations yet. Visit the store to get some!</p>
            <% } %>
            </div>

    <!-- Friends Section -->
    <div class="profile-friends">
        <div class="friends-section">
            <h2>Friends</h2>
            <% if (user.friends && user.friends.length > 0) { %>
                <div class="friends-grid">
                    <% user.friends.forEach(friend => { %>
                        <div class="friend-card">
                            <a href="/profile/<%= friend._id %>">
                                <img src="<%= friend.profilePicture || '/images/default-profile.png' %>" alt="<%= friend.username %>'s profile picture">
                            </a>
                            <h3><a href="/profile/<%= friend._id %>"><%= friend.username %></a></h3>
                            <form action="/remove-friend" method="POST">
                                <input type="hidden" name="friendId" value="<%= friend._id %>">
                                <button type="submit" class="btn-remove">Remove</button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>You don't have any friends yet.</p>
            <% } %>
        </div>

        <div class="suggested-users">
            <h2>Suggested Friends</h2>
            <% if (otherUsers && otherUsers.length > 0) { %>
                <div class="users-grid">
                    <% otherUsers.forEach(user => { %>
                        <div class="user-card">
                            <a href="/profile/<%= user._id %>">
                                <img src="<%= user.profilePicture || '/images/default-profile.png' %>" 
                                    alt="<%= user.username %>'s profile picture">
                            </a>
                            <h3><a href="/profile/<%= user._id %>"><%= user.username %></a></h3>
                            <form action="/add-friend" method="POST">
                                <input type="hidden" name="friendId" value="<%= user._id %>">
                                <button type="submit" class="btn-add">Add Friend</button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>No suggested friends at this time.</p>
            <% } %>
        </div>
    </div>

        <!-- Flash Messages -->
        <% if (messages && messages.success) { %>
            <div class="success-message"><%= messages.success %></div>
        <% } %>
        <% if (messages && messages.error) { %>
            <div class="error-message"><%= messages.error %></div>
        <% } %>
    </div>

    <!-- Background Effect Script -->
<!-- Background Effect Script -->
<% if (user.equippedItems && user.equippedItems.background) { %>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.waves.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
    const backgroundType = "<%= user.equippedItems.background %>";

    // If background is an image URL
    if (backgroundType.startsWith('http')) {
        // Absolute URL path (no need to modify)
        document.body.style.backgroundImage = `url('${backgroundType}')`;
        document.body.style.backgroundSize = 'cover';
        document.body.style.backgroundPosition = 'center';
        document.body.style.backgroundAttachment = 'fixed';
    }
    // If background is 'waves' effect
    else if (backgroundType === 'waves') {
        VANTA.WAVES({
            el: "#profile-page",
            color: 0x3b82f6,
            waveHeight: 20,
            waveSpeed: 1.5,
            zoom: 0.85
        });
    }
    // If background is a relative path (stored image)
    else if (backgroundType) {
        // Ensure the 'uploads/' prefix is added only if it doesn't already exist
        let imageUrl = backgroundType;
        if (!imageUrl.startsWith('/uploads/')) {
            imageUrl = `/uploads/${imageUrl}`;
        }
        
        document.body.style.backgroundImage = `url('${imageUrl}')`;
        document.body.style.backgroundSize = 'cover';
        document.body.style.backgroundPosition = 'center';
        document.body.style.backgroundAttachment = 'fixed';
    }
    // Fallback background color
    else {
        document.body.style.backgroundColor = '#f0f0f0';
    }
});
    </script>
<% } %>            
</body>
</html>
