<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            background-color: #f0f0f0;
            <% if (backgroundImage && backgroundImage !== '') { %>
            background-image: url('<%= backgroundImage %>');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            <% } %>
            padding-top: 60px; /* Space for fixed nav */
        }
        
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            width: 100%;
        }
        
        .game-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            flex: 1;
            width: 100%;
            padding: 20px;
        }
        
        #gameBoard {
            border: 3px solid black;
            background-color: rgba(255, 255, 255, 0.7);
            margin-top: 20px;
        }
        
        #scoreText {
            font-size: 24px;
            margin: 20px 0;
        }
        
        #resetBtn {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <nav>
        <%- include('partials/nav') %>
    </nav>
    
    <div class="game-content">
        <h1>Snake Game</h1>
        <canvas id="gameBoard" width="500" height="500"></canvas>
        <div id="scoreText">Score: 0</div>
        <button id="resetBtn">Reset Game</button>
    </div>
    <div id="points-notification" style="display: none; position: fixed; bottom: 20px; right: 20px; background: #4CAF50; color: white; padding: 15px; border-radius: 5px; z-index: 1000;">
        Points updated! Your new total is <span id="new-points-total"></span>
    </div>
    
    <script>
        // Optional: Show a notification when points are updated
        function showPointsNotification(newTotal) {
            const notification = document.getElementById('points-notification');
            const pointsDisplay = document.getElementById('new-points-total');
            
            pointsDisplay.textContent = newTotal;
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }
    </script>
    <script src="/javascript/snake.js"></script>
</body>
</html>